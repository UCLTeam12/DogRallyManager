@model IEnumerable<DogRallyManager.Database.Models.Signs.Sign>

<h1>Skilt</h1>

<table>
    @for (var y = 0; y < 8; y++)
    {
    <tr>
        @for (var x = 0; x < 8; x++)
        {
        var piece = Model.FirstOrDefault(p => p.PositionX == x && p.PositionY == y);
        <td>
            @foreach (var sign in Model)
            {
            <div class="sign" data-sign-id="@sign.Id">@sign.SignType</div>
            }
        </td>
        }
    </tr>
    }
</table>

@section scripts {
<script>
    $('.sign').click(function () {
        var pieceId = $(this).data('sign-id');
        var newX = prompt('Enter new X coordinate:');
        var newY = prompt('Enter new Y coordinate:');
        if (newX !== null && newY !== null) {
            $.post('/Sign/MoveSign', { signId: signId, newX: newX, newY: newY }, function () {
                location.reload();
            });
        }
    });
</script>
}